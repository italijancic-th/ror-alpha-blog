
<%# Check if have any errors to show %>
<% if @article.errors.any? %>
  <h2 class="text-error">Article didn't save because of this errors:</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li style='color: red'> <%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="row justify-content-center">
  <div class="col-10">
    <%= form_with model: @article, local: true do |f| %>

      <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :description, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_area :description, rows:10, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row mt-4">
        <div class="col text-center">
          <%= f.submit class: "btn btn-primary btn-lg"%>
        </div>
      </div>

    <% end %>

    <%= link_to 'Return to articles list', articles_path %>
  </div>
</div>